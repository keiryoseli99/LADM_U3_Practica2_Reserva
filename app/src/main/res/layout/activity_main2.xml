<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3BFB3"
    android:orientation="horizontal"

    tools:context=".MainActivity">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:paddingLeft="15dp"
            android:text="Buscar Evento"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:layout_weight="0"

            />


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="632dp"
            android:layout_gravity="center"
            android:background="#B3BFB3"
            android:columnCount="2"
            android:padding="15dp"
            android:rowCount="6">

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="120dp"
                android:layout_columnSpan="2"
                android:layout_margin="10dp"
                android:background="@drawable/redondo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Cliente"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/cliente2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. Juan López" />

                <Button
                    android:id="@+id/buscar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:text="Buscar reserva"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_margin="10dp"
                android:background="@drawable/redondo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Lugar"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/lugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Calle, num interior, colonia, CP." />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_margin="10dp"
                android:background="@drawable/redondo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Hora"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/hora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. 10:30 AM / 14:20 PM" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_margin="10dp"
                android:background="@drawable/redondo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Fecha"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. 05/11/2021" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="320dp"
                android:layout_height="100dp"
                android:layout_columnSpan="2"
                android:layout_margin="10dp"
                android:background="@drawable/redondo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:text="Descripcion"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    />

                <EditText
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ej. fiesta de cumpleaños" />


            </LinearLayout>


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Borrar reserva"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/borrar"
                android:padding="5dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Editar reserva"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/editar"
                android:padding="5dp"
                />

        </LinearLayout>



    </LinearLayout>




</LinearLayout>